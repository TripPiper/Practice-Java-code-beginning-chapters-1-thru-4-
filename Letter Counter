
import java.util.*;

public class LetterCounter 
{
    public static void main (String[]args)
    {
        
     Scanner keyboard =new Scanner (System.in);
        
        String input ; // Holds user's string input.
        char letter; // Holds user's charater input.
        
        System.out.println(" Enter a word or a sentence ");
        input = keyboard.nextLine();   
        
        
         System.out.println(" Enter a letter. ");
         letter = keyboard.nextLine().charAt(0);  
        
        
        
        
    int counter = 0;
    for (int i = 0; i < input.length(); i++)
    {
      if (input.charAt(i)== letter )
      {
        counter++;
        }
    }
    System.out.println("\nThe specified character " +"\"" + letter +
                          "\" is inside the string " + input +
                          " " + counter +   " times.\n"); 
        
        
           
            
  
}
} 
